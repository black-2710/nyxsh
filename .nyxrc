#!/bin/bash

# ASCII Banner via echo
echo -e "\033[1;34m"
echo "                       _     "
echo "  _ __  _   ___  _____| |__  "
echo " | '_ \| | | \ \/ / __| '_ \ "
echo " | | | | |_| |>  <\__ \ | | |"
echo " |_| |_|\__, /_/\_\___/_| |_|"
echo "        |___/                "
echo -e "\033[34m"

# Header
echo -e "\033[1;31m───────────────────────────────\033[0m"
echo -e "\033[1;36m     Welcome to Nyxsh "
echo -e "Simple and Stable… it's time."
echo -e "\033[1;31m───────────────────────────────\033[0m"

# Status Info
echo -e "\033[1;31m[+] Nyxsh Loaded. Hello, $(whoami).\033[0m"
echo -e "\033[1;32m[+] Date: $(date)\033[0m"
echo -e "\033[1;34m[+] Current Directory: $(pwd)\033[0m"

# Aliases
alias ll='ls -la --color=auto'
alias gs='git status'

